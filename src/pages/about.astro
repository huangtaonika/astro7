import Card from '../components/Card.astro';
import Box from '../components/Box.astro';
---
<!DOCTYPE html>
<html lang="en">
<head>
    <title>汐游</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0px 0px;
            padding: 0;
            background-color: #f0f0f0;
        header {
    background-color: #333;
    color: #62f3dd;
    padding: 10px 20px;
    text-align: center;
    font-family: 'Orbitron', sans-serif; /* 使用自定义字体 */
            font-size: 35px; /* 调整字体大小 */
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* 添加文字阴影效果 */
    background-image: url('../public/骑行1.jpg');
    background-size: cover;
    background-repeat: no-repeat;
}
nav {
    background-color: transparent;
    padding: 25px 20px;
    text-align: left;
    position: fixed;
    top: 0; /* 修改这里，将导航栏设置为固定位置 */
    width: 100%;
    z-index: 1000;
    letter-spacing: 4px;
    word-spacing: 6px;
    font-weight: bold;
    font-size: 23px;
    transition: top 0.3s; /* 添加这一行，设置导航栏滑动动画 */
}
        nav a {
            color: #9e81dc;
            text-decoration: none;
            margin: 0 10px;
        }
        section {
            padding: 20px;
            background-color: #fff;
            margin: 20px;
            display: flex; /* 添加这一行，使用flex布局 */
            flex-wrap: wrap; /* 添加这一行，允许子元素换行 */
            justify-content: space-between; /* 添加这一行，使子元素之间保持间距 */
        }
        .section-title {
            width: 100%; /* 设置宽度为100% */
            text-align: center; /* 居中对齐 */
            margin-bottom: 20px; /* 添加底部外边距 */
            position: relative; /* 设置为相对定位 */
        }
        .more-games {
            position: absolute; /* 设置为绝对定位 */
            right: 0; /* 将更多游戏链接放置在最右边 */
            top: 0; /* 与标题对齐 */
            font-size: 15px; /* 设置字体大小 */
            color: #574c4c; /* 设置字体颜色 */
            text-decoration: none; /* 移除下划线 */
        }
        
        
        footer {
            text-align: center;
            padding: 1px;
            background-color: #333;
            color: #fff;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <header>
        <h1>汐游网</h1>
        <p>一个专门分享优质小游戏的网站</p >
    </header>
    <nav>
        <a href="index.html">首页</a>
        <a href="about.html">关于我们</a>
        <a href="what.html">联系我们</a>
    </nav>
    <section>
        <div class="section-title">
            <h2>声明</h2>
        </div>
        <style>
            img {
                width: 400px; /* 设置图片宽度 */
                height: 200px; /* 设置图片高度 */
                object-fit: cover; /* 控制图片缩放方式为覆盖 */
            }
        </style>
        <article>
            
            <p>在这个快节奏的世界里，每个人都需要一点乐趣来放松心情。汐游网正是您寻找快乐的地方。我们致力于为游戏爱好者提供一个丰富多彩的游戏检索平台，让您随时随地享受游戏带来的乐趣。</p>
        </article>
    </section>
    <footer>
        <p>&copy; 2024汐游网. 用心做好分享</p >
    </footer>
    <script>
        var images = ['../public/骑行1.jpg', '../public/骑行2.jpg', '../public/骑行3.jpg']; // 图片URL数组
        var index = 0;
        setInterval(function() {
            index = (index + 1) % images.length; // 循环显示图片
            document.querySelector('header').style.backgroundImage = 'url(' + images[index] + ')'; // 更改背景图像
        }, 3000); // 每3秒更换一次背景图像
    </script>
    <script>
        window.addEventListener('scroll', function() {
            var nav = document.querySelector('nav');
            if (window.pageYOffset > 100) { // 当页面向下滚动超过100像素时，隐藏导航栏
                nav.style.top = '-100px';
            } else { // 当页面向上滚动回到顶部时，显示导航栏
                nav.style.top = '0';
            }
        });
    </script>
</body>
</html>